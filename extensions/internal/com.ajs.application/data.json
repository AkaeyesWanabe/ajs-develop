{
    "id": "com.ajs.application",
    "name": "Application System",
    "version": "1.0.0",
    "type": "system",
    "internal": true,
    "singleton": true,
    "description": "System extension for application/project management",
    "author": "AJS Develop",
    "properties": {
        "name": {
            "type": "text",
            "default": "New Game",
            "label": "Application Name",
            "description": "Name of the application"
        },
        "version": {
            "type": "text",
            "default": "1.0.0",
            "label": "Version",
            "description": "Version of the application"
        },
        "author": {
            "type": "text",
            "default": "",
            "label": "Author",
            "description": "Author of the application"
        },
        "company": {
            "type": "text",
            "default": "",
            "label": "Company",
            "description": "Company name"
        },
        "package": {
            "type": "text",
            "default": "com.company.newgame",
            "label": "Package",
            "description": "Package identifier"
        },
        "width": {
            "type": "number",
            "default": 640,
            "label": "Window Width",
            "min": 320,
            "max": 3840,
            "description": "Default window width"
        },
        "height": {
            "type": "number",
            "default": 480,
            "label": "Window Height",
            "min": 240,
            "max": 2160,
            "description": "Default window height"
        },
        "mainScene": {
            "type": "text",
            "default": "",
            "label": "Main Scene",
            "description": "Path to the main scene (entry point of the application)"
        },
        "icon": {
            "type": "text",
            "default": "favicon.png",
            "label": "Icon",
            "description": "Application icon path"
        },
        "fullscreen": {
            "type": "boolean",
            "default": false,
            "label": "Fullscreen",
            "description": "Start in fullscreen mode"
        },
        "resizable": {
            "type": "boolean",
            "default": true,
            "label": "Resizable Window",
            "description": "Allow window resizing"
        },
        "targetFPS": {
            "type": "number",
            "default": 60,
            "label": "Target FPS",
            "min": 30,
            "max": 144,
            "description": "Target frames per second"
        }
    }
}
