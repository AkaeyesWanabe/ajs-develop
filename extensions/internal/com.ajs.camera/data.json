{
    "id": "com.ajs.camera",
    "name": "Camera System",
    "version": "1.0.0",
    "type": "system",
    "internal": true,
    "singleton": true,
    "description": "System extension for camera management (follow, zoom, bounds, shake)",
    "author": "AJS Develop",
    "properties": {
        "x": {
            "type": "number",
            "default": 0,
            "label": "X Position"
        },
        "y": {
            "type": "number",
            "default": 0,
            "label": "Y Position"
        },
        "zoom": {
            "type": "number",
            "default": 1,
            "label": "Zoom",
            "min": 0.1,
            "max": 10
        },
        "rotation": {
            "type": "number",
            "default": 0,
            "label": "Rotation (degrees)"
        }
    }
}
